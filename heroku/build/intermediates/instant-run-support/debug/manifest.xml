<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="kylemeyers22.heroku"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="23"
        android:targetSdkVersion="24" />
    //allows access to the internet for the backend
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.android.tools.fd.runtime.BootstrapApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >

        <!-- BaseballSim Login -->
        <activity
            android:name="kylemeyers22.heroku.LoginActivity"
            android:label="Login to Baseballsim" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- BaseballSim Field -->
        <activity
            android:name="kylemeyers22.heroku.FieldActivity"
            android:label="Fields of Baseballsim" />

        <!-- BaseballSim League -->
        <activity
            android:name="kylemeyers22.heroku.LeagueActivity"
            android:label="Leagues of Baseballsim" />

        <!-- BaseballSim Teams -->
        <activity
            android:name="kylemeyers22.heroku.TeamFragment"
            android:label="Teams of Baseballsim" />

        <!-- BaseballSim Schedule -->
        <activity
            android:name="kylemeyers22.heroku.ScheduleActivity"
            android:label="Schedules of Baseballsim" />

        <!-- BaseballSim Game -->
        <activity
            android:name="kylemeyers22.heroku.GameFragment"
            android:label="Games of Baseballsim" />
        <activity
            android:name="kylemeyers22.heroku.PlayerFragment"
            android:label="Main Baseballsim Display" />
        <activity android:name="kylemeyers22.heroku.MainTabbedActivity" />
    </application>

</manifest>