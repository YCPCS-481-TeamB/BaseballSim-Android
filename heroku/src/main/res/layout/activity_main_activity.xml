<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="horizontal"
    tools:context=".MainActivity">

    <!-- Top Label -->
    <TextView
        android:text="Click Button to show the Players from the backend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/allPlayers"/>

    <!-- Initiate Button -->
    <Button
        android:id="@+id/getPlayerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Players!!!"
        android:layout_below="@+id/allPlayers"/>

    <!-- FirstName Label and Viewfield-->
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="First Name"
        android:gravity="left"
        android:id="@+id/playerFirstNameLabel"
        android:layout_below="@+id/getPlayerButton"/>
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text=""
        android:gravity="left"
        android:id="@+id/playerFirstName"
        android:layout_below="@+id/getPlayerButton"
        android:layout_toEndOf="@+id/playerFirstNameLabel"/>

    <!-- LastName Label and Viewfield-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last Name"
        android:gravity="left"
        android:id="@+id/playerLastNameLabel"
        android:layout_below="@+id/playerFirstName"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:gravity="left"
        android:id="@+id/playerLastName"
        android:layout_below="@+id/playerFirstName"
        android:layout_toEndOf="@+id/playerLastNameLabel"/>

    <!-- Placeholder textview (?) -->
    <TextView
        android:paddingTop="20px"
        android:id="@+id/serverText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
